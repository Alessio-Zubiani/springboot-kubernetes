	<groupId>com.example.kubernetes</groupId>
	<artifactId>springboot-kubernetes</artifactId>
	<version>1.0.1</version>
	
	<name>springboot-kubernetes</name>
	<description>SpringBoot with Kubernetes</description>
	
	<properties>
		<java.version>17</java.version>
		<jkube.skip.push>false</jkube.skip.push>
