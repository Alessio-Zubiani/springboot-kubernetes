  				<executions>
		         	<execution>
		             	<goals>
		                  	<goal>build</goal>
		                  	<goal>push</goal>
		                  	<goal>resource</goal>
		                  	<goal>apply</goal>
		             	</goals>
		         	</execution>
		     	</executions>
