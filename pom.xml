  				<version>1.15.0</version>
  				<configuration>
	  				<authConfig>
	            		<username>alessiozubiani1996</username>
	                  	<password>Sondalo2024!</password>
	        		</authConfig>
	        		<buildStrategy>jib</buildStrategy>
